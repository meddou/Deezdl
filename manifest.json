{
   "manifest_version": 2,
   "name": "Deezdl",
   "description": "Download your favorite Deezer music from everywhere",
   "version": "1.3.7",
   "permissions": [
      "http://*/*",
      "https://*/*",
      "background",
      "tabs",
      "storage"
   ],
   "browser_action": {
      "default_icon": "img/logo.png",
      "default_popup": "views/popup.html"
   },
   "icons": {
      "128": "img/logo.png"
   },
   "background": {
     "persistent": false,
     "scripts": ["scripts/background.js"]
   },
   "content_scripts": [{
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/content.js"]
      }],
  "web_accessible_resources": [
      "img/logo.png",
      "lang/content_*.json"
  ]
}
